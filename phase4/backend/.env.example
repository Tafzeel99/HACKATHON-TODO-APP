# Phase 4 Unified Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================
# DATABASE - Neon PostgreSQL or SQLite
# ============================================================
# Production (Neon):
DATABASE_URL=postgresql://user:password@host.neon.tech/database
# Development (SQLite):
# DATABASE_URL=sqlite:///./todo_app.db

# ============================================================
# OPENROUTER API - For AI Features (Phase 3)
# ============================================================
# Get your API key from https://openrouter.ai/keys
OPEN_ROUTER_KEY=sk-or-v1-your-key-here
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-4o-mini

# ============================================================
# BETTER AUTH - Authentication & JWT
# ============================================================
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars
BETTER_AUTH_URL=http://localhost:8000

# ============================================================
# JWT SETTINGS
# ============================================================
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# ============================================================
# CORS - Frontend URLs (JSON array format)
# ============================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=development

# ============================================================
# RATE LIMITING - API Protection (Phase 3)
# ============================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# AI AGENT SETTINGS - OpenAI Agents SDK (Phase 3)
# ============================================================
AGENT_MAX_TOKENS=2000
